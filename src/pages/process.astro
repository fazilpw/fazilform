---
import Layout from '../layouts/Layout.astro';
import HeaderInternal from '../components/HeaderInternal.astro';
import ProcessSection from '../components/sections/ProcessSection.astro';
import CTASection from '../components/sections/CTASection.astro';
import Footer from '../components/Footer.astro';

---

<Layout title="Nuestro Proceso - Fazil AI">
  <HeaderInternal />
  <main>
    <div class="pt-32 bg-gradient-to-r from-blue-700 to-purple-700 text-white">
      <!-- Encabezado de página -->
      <div class="container mx-auto px-6 py-16 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Nuestro Proceso</h1>
        <p class="text-xl text-blue-100 max-w-3xl mx-auto">
          De la idea a una página web profesional en solo 50 minutos - Así funciona nuestro servicio
        </p>
      </div>
    </div>
    
    <ProcessSection />
    <CTASection />
  </main>
  <Footer />
</Layout>